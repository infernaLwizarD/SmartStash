<div class="login-box">

  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Изменение пароля</h3>
    </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "web/users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="input-group mb-3">
          <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-sm",
                               placeholder: "Новый пароль", required: true %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>

        <div class="input-group mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-sm",
                               placeholder: "Повторите пароль", required: true %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <div class="actions mb-2">
              <%= f.submit "Изменить пароль", class: 'btn btn-primary btn-block' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="card-footer">
      <%= render "web/users/shared/links" %>
    </div>
  </div>

</div>